<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vincent.sampletoolbar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StatusBarActivity" android:theme="@style/StatusBarTheme" />
        <activity android:name=".ScrollViewActivity" android:theme="@style/AppTheme" />
        <activity android:name=".RecyclerViewActivity" android:theme="@style/ToolbarStatusBarTheme" />

    </application>

</manifest>