<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e6e6e6" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="-5dip"
        android:right="-5dip"
        android:top="-5dip">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dip"
                android:color="#d2d2d2"
                android:dashGap="2dp"
                android:dashWidth="5dp" />
        </shape>
    </item>
</layer-list>